{% form_theme form '@SyliusShop/Form/theme.html.twig' %}
<div class="ui segment">
    <div class="breadcrumb_notify" style="text-align: center;">
        {{ 'webgriffe_bisn.product_page.stock_notify_title'|trans|raw }}
    </div>
    {{ form_start(form, {'attr': {'class': 'ui form_notify form-default', 'id': 'back_in_stock_not'}, 'action': path('webgriffe_back_in_stock_notification_add_subscription')}) }}
    <p style="display:none;">
        <label for="customer_email">Email : </label><input type="email" id="customer_email" name="customer_email">
    </p>
    {% if form.email is defined %}
        {{ form_widget(form.email, {'attr': {'data-test-fill-subscription-form-whit-my-email':'', 'class' : 'input m1', 'placeholder': 'Email'}}) }}
    {% endif %}

    {{ form_row(form.product_variant_code, {'attr': {'data-test-add-email-to-back-in-stock-notification-list':''}}) }}

    <button type="submit" class="ui huge primary icon labeled button" {{ sylius_test_html_attribute('subscribe-to-notifications') }}><i class="bell icon"></i> {{ 'webgriffe_bisn.product_page.form_action'|trans }}</button>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
</div>
